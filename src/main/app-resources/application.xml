<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="application">
  <jobTemplates>
    <jobTemplate id="template_hypeapps">
      <streamingExecutable>/application/node_forecast/run.R</streamingExecutable>
      <defaultParameters>

        <parameter id="model_config" title="Model configuration" abstract="Hydrological model, meterological hindcast and forecast dataset" minOccurs="1" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <option>WestAfrica-HYPE + HydroGFD 2.0 + ECOPER</option>
            <default>WestAfrica-HYPE + HydroGFD 2.0 + ECOPER</default> 
          </options>
        </parameter>

        <parameter id="idate" title="Forecast issue date (yyyy-mm-dd)" abstract="Data available since 2016-06-01" minOccurs="1" maxOccurs="1" scope="runtime" type="LiteralData">2019-10-03</parameter>

        <parameter id="hcperiodlen" title="Hindcast period length (days)" abstract="Default 10 year" minOccurs="1" maxOccurs="1" scope="runtime" type="LiteralData">3650</parameter>

        <parameter id="runtype" title="Run type (Operational/Reforecast)" abstract="Operational - scheduled run for automatic operational production. Reforecast - re-run forecast or with other options" minOccurs="1" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <!-- <option>Operational</option> -->
            <option>Reforecast</option>
            <default>Reforecast</default> <!-- ToDo: Change to Operational as default when implemented-->
          </options>
        </parameter>

        <parameter id="variables" title="Output variables" abstract="Select output variables" minOccurs="1" maxOccurs="8" scope="runtime" type="LiteralData">
          <options>
            <option>River Discharge (m3/s) COUT</option>           
            <option>Air Temperature (C) CTMP</option>
            <option>Precipitation (mm/day) CPRC</option>
            <option>Simulated surface runoff (mm/day) CROS</option>
            <option>Evapotranspiration (mm/day) EVAP</option>
            <option>Total Runoff (mm/day) CRUN</option>
            <option>Soil Moisture (-) fraction of plant avalable water in the root zone SRFF</option>
            <option>Lake Water Level (m) WCOM</option>
            <option>Total Surface Water Area (km2) lakes rivers and floodplains CSWA</option>
            <default>River Discharge (m3/s) COUT</default> 
          </options>
        </parameter>

        <parameter id="xobs" title="Xobs file(s) with EO and/or In-situ data" abstract="Xobs file(s) with pre-processed EO or In-situ data" minOccurs="0" maxOccurs="10" scope="runtime" type="LiteralData"></parameter>

        <parameter id="assimOn" title="Assimilation on/off" abstract="Data assimilation on/off" minOccurs="1" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <option>on</option>
            <option>off</option>
            <default>off</default>
          </options>
        </parameter>

        <parameter id="assimVars" title="Assimilated observations" abstract="Observations to be assimilated" minOccurs="1" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <option>Lake Water Level - altimetry AOWL WCOM</option>
            <option>Openloop - ensembles without assimilation OPEN LOOP</option>
       <!-- <option>Lake Water Level - in-situ, WSTR, WCOM</option>
            <option>River Water Level - altimetry, AMWL, CMWL</option>
            <option>River Water Level - in-situ, RMWL, CMWL</option> 
            <option>River Discharge - in-situ, ROUT, COUT</option> -->
            <default>Lake Water Level - altimetry AOWL WCOM</default>
          </options>
        </parameter>

        <!-- ToDo: Rename id to model_config_file or similar -->
        <parameter id="model" title="Model configuration file" abstract="File containing users own model configuration" minOccurs="0" maxOccurs="1" scope="runtime" type="LiteralData">-</parameter>

      </defaultParameters>
      
      <defaultJobconf>
        <property id="mapred.task.timeout">6000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  
  
  <workflow id="workflow" title="WestAfrica-HYPE Forecast" abstract="Make 1-10 days hydrometeorological forecasts for the Niger river basin with the HYPE model. More info at http://hypeweb.smhi.se/niger-hype/forecast and http://www.smhi.net/hype/wiki.">
    <workflowVersion>1.0</workflowVersion>
    <node id="node_forecast">
      <job id="template_hypeapps"/>
      <sources>
        <source id="model" scope="runtime" refid="string:list"></source>
      </sources>
    </node>
  </workflow>
</application>
