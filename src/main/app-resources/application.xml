            <option>niger-hype-2.23</option>
            <option>westafrica-hype-1.3.1</option>
            <default>niger-hype-2.23</default>
          </options>
        </parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">6000000</property>
      </defaultJobconf>
    </jobTemplate>
